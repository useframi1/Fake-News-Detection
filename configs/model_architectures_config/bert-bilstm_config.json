{
    "bert_model": "bert-base-uncased",
    "tokenizer": "bert-base-uncased",
    "criterion": "cross-entropy",
    "optimizer": "adamW",
    "learning_rate": 5e-5,
    "epochs": 10,
    "hidden_size": 768,
    "num_layers": 1,
    "bert_dropout": 0.2,
    "lstm_out_dropout": 0.3,
    "weight_decay": 1e-3,
    "lr_scheduler": {
        "mode": "max",
        "patience": 2,
        "factor": 0.1
    },
    "do_adversarial_training": true,
    "adversarial_training": {
        "method": "pgd",
        "config": {
            "epsilon": 0.5,
            "alpha": 0.3,
            "steps": 3
        }
    }
}
